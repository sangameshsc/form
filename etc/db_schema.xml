<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
<table name="my_cars">
    <column xsi:type="int" name="car_id" unsigned="true" nullable="false" identity="true" comment="Value ID"/>
    <column xsi:type="varchar" name="manufacturer" length="100" nullable="false"/>
    <column xsi:type="int" name="model" unsigned="true" nullable="false"/>
    <constraint xsi:type="primary" referenceId="PRIMARY">
        <column name="car_id"/>
    </constraint>
    
</table>
</schema>